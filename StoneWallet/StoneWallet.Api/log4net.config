<?xml version="1.0" encoding="utf-8" ?>
<log4net>

  <root>
    <appender-ref ref="Papertrail" />
  </root>

  <appender name="Papertrail" type="log4net.Appender.RemoteSyslogAppender">
    <facility error="Local6" />
    <identity error="%date{yyyy-MM-ddTHH:mm:ss.ffffffzzz} %P{log4net:HostName} StoneWallet" />
    <layout type="log4net.Layout.PatternLayout" error="%level - %message%newline" />
    <remoteAddress error="logs6.papertrailapp.com" />
    <remotePort error="21658" />
  </appender>

</log4net>